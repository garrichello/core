    </service>
    <metadb host='localhost' name='cvcdatadb' user='dbuser' password=''/>
    <computing system="calculator" type="LOCAL" ip="127.0.0.1"/>
<!-- Data segment. Order is not important. -->

    <data uid='Data_1' type='dataset'> <!-- type: dataset, array -->
    	<description title='ERA5 reanalysis' name='Temperature' units='K'/>
	    <dataset name='ERA5' resolution='0.25x0.25' time_step='1d' scenario='-'/>  <!-- ERAINT -->
    	<variable name='mint2m' tempk2c='no'/> <!-- maxt2m - Days, mint2m - Nights -->
	    <region units='degrees'>
	        <point lon='55' lat='75'/> 
	        <point lon='130' lat='75'/>
	        <point lon='130' lat='50'/>
	        <point lon='55' lat='50'/>
	    </region>
	    <levels values='2m'/>
	    <time uid='Input_1' template='YYYYMMDDHH'>
	        <segment name='Seg1' beginning='2011010100' ending='2011123123'/>
	        <segment name='Seg2' beginning='2012010100' ending='2012123123'/>
	    </time>
    </data>
    
    <data uid='Data_2' type='dataset' parent='Data_1' product='pdftails'> <!-- type: dataset, array -->
        <dataset scenario='Climate normals 1981-2010'/>
        <levels values='10'/>  <!-- 10 - Cold, 90 - Warm -->
    </data>

    <destination uid='Image_1' type='image'> <!-- type: 'image', 'raw' -->
	<file name='output/FreqColdNights_output.tiff' type='geotiff'/> <!-- type for graphics kind='shape': 'eps', 'geotiff'; kind='contour'/'station': 'eps', 'shape'; for kind=='multiline': 'eps'; for kind=='tile' : 'geotiff24' -->
	<projection name='cylindrical'> <!-- 'azimuthal equidistant, 'cylindrical',... -->
	    <limits units='degrees'>
          	<limit role="left">-180</limit>
	        <limit role="right">180</limit>
          	<limit role="top">90</limit>
          	<limit role="bottom">-90</limit>                                        
	    </limits>
	</projection>
	<graphics title='' kind='shaded'> <!-- kind: 'shaded', 'contour', 'station', 'tile'; 'multiline', 'vector', 'regress2d' -->
	    <width units='pixels'>3072</width>
	    <height units='pixels'>2304</height>
	    <legend title='' kind='file' type='continuous' position='none'> <!-- kind: 'embedded', 'file', 'none'; position: 'right', 'left', 'top', 'bottom' (only for kind=='embedded') -->
		<units>corTM</units> <!-- added after legend's title -->
		<nlabels>11</nlabels> <!-- !!! number of labels in legend -->
		<ncolors>10</ncolors> <!-- number of discrete colors in legend -->		
		<limited>no</limited> <!-- fixed legend limits: yes/no -->
		<minimum>-15.0</minimum> <!-- ignored if limited == no -->
		<maximum>15.0</maximum> <!-- ignored if limited == no -->
		<file name='output/FreqColdNights_output.sld' type='xml'/> <!-- file for legend (if legend kind=='file'), type: 'tiff', 'png', 'jpeg', 'gif', 'bmp', 'ppm, 'srf'  -->
	    </legend>
	    <colortable>RAINBOW</colortable>  <!-- only for graphics kind=='shaded' -->
	    <colorscale>linear</colorscale> <!-- only for graphics kind=='shaded' -->
	    <smoothing>yes</smoothing> <!-- only for graphics kind=='shaded' -->
	</graphics>
    </destination>

    <destination uid='File_1' type='raw'>
		<file name='output/FreqColdNights_output.nc' type='netcdf'/> <!--type: 'netcdf', 'geotiff'; 'bin', xml' -->
    </destination>   

    <data uid='Result_1' type='array'>
    	<description title='Frequency of Cold Nights' name='Frequency' units='%'/>
	    <time uid='Output_1' template='YYYYMMDDHH' step='1y'>
	        <segment name='Seg1' beginning='2009010100' ending='2012123118'/>
	    </time>
    </data>

    <data uid='ExceedanceParameters_1' type='parameter'>
    	<param uid='Feature' type='string'>frequency</param> <!-- frequency, intensity, duration -->
        <param uid='Exceedance' type='string'>low</param> <!-- low - Cold, high - Warm -->
    	<param uid='Mode' type='string'>data</param>  <!-- segment - all segments separately, data - max over segments -->
    </data>
    
<!-- End of data segment -->

<!-- Code segment. Order is IMPORTANT! -->

    <processing uid='Process_1' class='CalcExceedance' module_path=''>
    	<input uid='P1Input1' data='Data_2'/>
    	<input uid='P1Input2' data='Data_1'/>
    	<input uid='P1Parameter' data ='ExceedanceParameters_1'/>
    	<output uid='P1Output1' data='Result_1'/>
    </processing>
    
    <processing uid='Visualization_1' class='cvcOutput'>
	    <input uid='V1Input1' data='Result_1'/>
	    <output uid='V1Destination' data='Image_1'/>
    </processing>

    <processing uid="Output_1" class="cvcOutput">
	    <input uid="O1Data1" data="Result_1"/>
        <output uid="O1Destination" data="File_1"/>
    </processing>


